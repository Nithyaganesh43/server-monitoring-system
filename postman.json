{
  "info": {
    "name": "Watchtower API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Request Verification Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/request",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "request"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"user@example.com\", \"deviceId\": \"device123\"}"
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/verify?token={{token}}",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"],
              "query": [
                {
                  "key": "token",
                  "value": "{{token}}"
                }
              ]
            }
          }
        },
        {
          "name": "Check Verification",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/check?deviceId=device123&email=user@example.com",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "check"],
              "query": [
                {
                  "key": "deviceId",
                  "value": "device123"
                },
                {
                  "key": "email",
                  "value": "user@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Servers",
      "item": [
        {
          "name": "Add Server",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/servers/add",
              "host": ["{{baseUrl}}"],
              "path": ["servers", "add"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"url\": \"https://example.com\", \"alertEnabled\": true}"
            }
          }
        },
        {
          "name": "Get All Servers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/servers",
              "host": ["{{baseUrl}}"],
              "path": ["servers"]
            }
          }
        },
        {
          "name": "Delete Server",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/servers/{{serverId}}",
              "host": ["{{baseUrl}}"],
              "path": ["servers", "{{serverId}}"]
            }
          }
        },
        {
          "name": "Get Server Status Summary",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/servers/status",
              "host": ["{{baseUrl}}"],
              "path": ["servers", "status"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "serverId",
      "value": ""
    }
  ]
}
